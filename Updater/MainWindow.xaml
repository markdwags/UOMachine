<Window x:Class="Updater.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:p="clr-namespace:Updater.Resources"
        Title="{x:Static p:Strings.UOMachineUpdater}" Height="375" Width="375" WindowStartupLocation="CenterScreen" MinHeight="375" MinWidth="375">
    <Grid ShowGridLines="True">
        <ScrollViewer Margin="10,10,10,100" VerticalScrollBarVisibility="Auto">
            <TextBlock x:Name="textBox1" TextWrapping="Wrap" Text="{x:Static p:Strings.Checkingforupdates}"/>
        </ScrollViewer>
        <Label x:Name="statusLabel" Content="Label" Margin="10,210,10,70" VerticalAlignment="Bottom" Foreground="Black"/>
        <ProgressBar x:Name="progressBar1" Height="31" Margin="10,241,10,40" VerticalAlignment="Bottom"/>
        <Button x:Name="closeButton" Content="{x:Static p:Strings.Close}" HorizontalAlignment="Right" Margin="0,276,10,10" VerticalAlignment="Bottom" Width="74" Height="21" Click="closeButton_Click" IsDefault="True" IsEnabled="False"/>
    </Grid>
</Window>
